#pragma once

// FIXME: Overlay icon handler is crashing in some cases.
// Uncomment this to enable the overlay icon handler.
//#define ENABLE_OVERLAY_ICON_HANDLER 1

/* Define to 1 if you have the "thumbcache.h" header file. */
#cmakedefine HAVE_THUMBCACHE_H 1

/* Define to 1 if you have the required symbols and functions for RP_PropertyStore. */
#cmakedefine HAVE_RP_PROPERTYSTORE_DEPS 1

/* Define to 1 if you have the `std::ofstream::open(const wchar_t*, ios_base::openmode)` function. */
#cmakedefine HAVE_OFSTREAM_CTOR_WCHAR_T 1

/* Define to 1 if you have the `InitVariantFromString` function. */
/* FIXME: This is not being detected properly on MSVC/ARM... */
#ifdef _MSC_VER
#  define HAVE_INITVARIANTFROMSTRING 1
#else /* !_MSC_VER */
#cmakedefine HAVE_INITVARIANTFROMSTRING 1
#endif /* _MSC_VER */

/* Define to 1 if achievements are enabled. */
#cmakedefine ENABLE_ACHIEVEMENTS 1

/* Define to 1 if networking is enabled. */
#cmakedefine ENABLE_NETWORKING 1
